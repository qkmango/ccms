<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.qkmango.ccms.mvc.dao.CardDao">

    <!-- 获取未分页的总记录条数 -->
    <select id="count" resultType="int">
        SELECT FOUND_ROWS()
    </select>

    <insert id="insert">
        insert into t_card(user)
        values (#{user})
    </insert>

    <update id="state">
        update t_card
        set `lock`=#{lock}
        where user = #{user}
    </update>


    <update id="recharge">
        update t_card
        set balance = balance + #{balance}
        where user = #{user}
        and `lock` = 0
        and (select unsubscribe from t_user where id = #{user}) = 0
    </update>

    <update id="updateState">
        update t_card
        set state = #{state}
        where account = #{account}
    </update>

    <select id="lastInsertId" resultType="java.lang.Integer">
        SELECT LAST_INSERT_ID()
    </select>

    <select id="getCardByUserId" resultType="cn.qkmango.ccms.domain.entity.Card">
        select user, balance,`lock`
        from t_card
        where user = #{user}
    </select>

    <select id="getRecordByAccount" resultType="cn.qkmango.ccms.domain.entity.Card">
        select
        id,
        balance,
        state,
        account
        from t_card
        where account = #{account}
    </select>

    <select id="list" resultType="cn.qkmango.ccms.domain.entity.Card">
        select SQL_CALC_FOUND_ROWS
            id,
            balance,
            state,
            account
        from t_card
        <where>
            <if test="param != null">
                <if test="param.id != null and param.id != ''">
                    id=#{param.id}
                </if>
                <if test="param.state != null">
                    and state = #{param.state}
                </if>
                <if test="param.account != null and param.account != ''">
                    and account = #{param.account}
                </if>
            </if>
        </where>
        order by id asc
        <if test="pagination == true">
            LIMIT #{skipCount},#{limit}
        </if>

    </select>

    <resultMap id="UserAndCardVO" type="cn.qkmango.ccms.domain.vo.UserAndCardVO">
        <association property="user" javaType="cn.qkmango.ccms.domain.entity.User">
            <result column="id" property="id"/>
            <result column="name" property="name"/>
            <result column="department" property="department"/>
            <result column="email" property="email"/>
            <result column="card" property="card"/>
        </association>
        <association property="card" javaType="cn.qkmango.ccms.domain.entity.Card">
            <id column="id" property="id"/>
            <result column="balance" property="balance"/>
            <result column="state" property="state"/>
            <result column="account" property="account"/>
        </association>
    </resultMap>


</mapper>
