<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.qkmango.ccms.mvc.dao.TradeTimeoutDao">
    <insert id="insert">
        insert into t_trade_timeout(trade, timeout)
        values (#{trade}, #{timeout})
    </insert>

    <delete id="deleteByTradeId">
        delete
        from t_trade_timeout
        where trade = ${trade}
    </delete>

    <select id="getById" resultType="cn.qkmango.ccms.domain.entity.TradeTimeout">
        select id, trade, timeout
        from t_trade_timeout
        where id = #{id};
    </select>

    <select id="getRecordByTradeId" resultType="cn.qkmango.ccms.domain.entity.TradeTimeout">
        select id, trade, timeout
        from t_trade_timeout
        where trade = #{trade}
    </select>
</mapper>