<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.qkmango.ccms.mvc.dao.NoticeDao">

    <select id="getRecordById" resultType="cn.qkmango.ccms.domain.entity.Notice">
        select id,
               title,
               content,
               author,
               create_time
        from t_notice
        where id = #{id}
    </select>

    <select id="list" resultType="cn.qkmango.ccms.domain.entity.Notice">
        SELECT SQL_CALC_FOUND_ROWS
        id,
        title,
        <if test="preview == false">
            content,
        </if>
        <if test="preview != false">
            LEFT(content,#{previewLength}) as content,
        </if>
        author,
        create_time
        FROM t_notice
        <if test="param != null">
            <where>
                <if test="param.id != null">
                    id = #{param.id}
                </if>
                <if test="param.title != null">
                    and title like concat('%',#{param.title},'%')
                </if>
            </where>
        </if>
        order by id desc
        LIMIT #{skipCount},#{limit}
    </select>

    <insert id="insert">
        INSERT INTO t_notice (title, content, author, create_time)
        VALUES (#{title}, #{content}, #{author}, #{createTime})
    </insert>

    <delete id="delete">
        DELETE
        FROM t_notice
        WHERE id = #{id}
    </delete>

</mapper>
